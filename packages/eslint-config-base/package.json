{
  "name": "@ofadiman/eslint-config-base",
  "version": "1.1.0",
  "author": {
    "email": "ofadiman@gmail.com",
    "name": "Szymon Jaworski",
    "url": "https://github.com/Ofadiman"
  },
  "description": "Eslint config for TypeScript based projects.",
  "main": "index.js",
  "license": "MIT",
  "scripts": {
    "ncu-peer": "ncu --dep peer -u --target minor",
    "precommit": "lint-staged",
    "prettier": "prettier --write ."
  },
  "devDependencies": {
    "lint-staged": "^10.5.3"
  },
  "peerDependencies": {
    "@typescript-eslint/eslint-plugin": "4.28.0",
    "@typescript-eslint/parser": "4.28.0",
    "eslint": "7.29.0",
    "eslint-plugin-import": "2.23.4",
    "eslint-plugin-jest": "24.3.6",
    "eslint-plugin-jest-formatting": "3.0.0",
    "eslint-plugin-prettier": "4.0.0",
    "eslint-plugin-promise": "5.1.0",
    "eslint-plugin-simple-import-sort": "7.0.0",
    "eslint-plugin-sort-keys-fix": "1.1.1",
    "eslint-plugin-typescript-sort-keys": "1.7.0",
    "eslint-plugin-unicorn": "33.0.1",
    "prettier": "2.3.2"
  },
  "bugs": "https://github.com/Ofadiman/eslint-configs/issues",
  "engines": {
    "node": ">=14.0.0"
